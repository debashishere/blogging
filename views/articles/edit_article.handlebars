<section class="container">

    <section class="header">
        <div class="logo">
            <a href="">Logo</a>
            <h4>Edit Post</h4>
        </div>
        <a href="/profile">X</a>
    </section>
    <section class="main">
        <div class="write-post">

            <form action="/article/edit/{{article._id}}?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="">
                    <div class="">
                        <img src="/uploads/images/{{article.cover_image}}" style="height: 200px; weidth: 200px"><br>
                        <label for="image">Upload a New Cover Image</label><br>
                        <input type="file" id="cover-image" name="cover-image">
                    </div>
                </div>
                <div class="">
                    <div class="">
                        <label for="title"> Title</label>
                        <input type="text" id="title" name="title" value="{{article.title}}">
                    </div>
                </div>

                <div class="">
                    <div class="">
                        <select id="status" name="status">
                            {{#select article.status}}
                            <label for="title"> Status</label>
                            <option value="public" selected>Public</option>
                            <option value="private">Private</option>
                            {{/select}}
                        </select>
                    </div>
                </div>
                <div class="">
                    <div class="">
                        <h5>Tell Us Your Story</h5>
                        <textarea id="body" name="text">{{article.body.text}}</textarea>
                    </div>
                </div>

                <div class="">
                    <button>Submit</button>
                    <a herf="/profile">Cancel</a>
                </div>
            </form>
        </div>

    </section>

</section>